    <input type="search" class="form-control rounded-pill" id="keyword">
    <button class="rounded-sm btn btn-primary mt-3" id="search" onclick="search();">Cari</button>
  </div>
  <div class="card-body"></div> -->
{% endblock %}


{% block customfooter %}
  <script type="text/javascript">
    function search () {
      var keyword = document.getElementById("keyword").value;
      if (keyword.length < 1) {
        return;
      }
      $(".content").children("div").remove();
    }

    $(document).on('keypress',function(e) {
      if(e.which == 13) {
        search();
      }
    });
  </script>
{% endblock %}
