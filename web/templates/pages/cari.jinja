{% extends "layouts/base.jinja" %}
{% block page %}{{ page }}{% endblock %}

{% block customhead %}
  <style type="text/css">
    #jumbotron {
      margin-top: 17%;
    }

    #keyword {
      width: 40%;
      margin-left: 30%;
      margin-top: 1rem;
    }


    @media only screen and (max-width: 768px) {
      /* For mobile phones: */
      #keyword {
        width: 80%;
        margin-left: 10%;
      }
    }
  </style>
{% endblock %}

{% block content %}
  <div class="jumbotron text-center mb-5">
